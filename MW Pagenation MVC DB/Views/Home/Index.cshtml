@model PageView

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <form asp-action="Index" asp-controller="Home" method="get"> @*Отправить данные вместе от формы номер текущей страницы невозможно*@
        <input type="number" asp-for="@Model.Size" />
        <button type="submit">Change</button>
    </form>

    @*<input type="number" asp-for="@Model.Size" />*@
